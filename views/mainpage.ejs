    <script>
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        const toggleBtn = document.getElementById('toggle-btn');
        const MAX_LOGS = 6; // Số lượng log tối đa trong danh sách

        function getCurrentTime() {
            const now = new Date();
            const date = now.toLocaleDateString(); // Lấy ngày (định dạng: dd/mm/yyyy hoặc mm/dd/yyyy)
            const time = now.toLocaleTimeString(); // Lấy giờ (định dạng: hh:mm:ss)
            return `${date} ${time}`; // Kết hợp ngày và giờ
        }

        // Hàm để ghi log vào danh sách
        function logAction(action) {
            const logList = document.getElementById('log-list');
            const currentTime = getCurrentTime();
            const logItem = document.createElement('li');
            logItem.textContent = `[${currentTime}] ${action}`;
            logList.appendChild(logItem);

            // Cuộn xuống cuối log
            logList.scrollTop = logList.scrollHeight;
        }

        // Gắn sự kiện click cho nút Auto và Manual
        document.querySelector('.sidebar-btn:nth-child(1)').onclick = () => {
            logAction('Auto mode activated');
        };

        document.querySelector('.sidebar-btn:nth-child(2)').onclick = () => {
            logAction('Manual mode activated');
        };

        document.querySelector('.sidebar-btn:nth-child(6)').onclick = () => {
            logAction('System started');
        };

        document.querySelector('.sidebar-btn:nth-child(7)').onclick = () => {
            logAction('System reset');
        };

        document.querySelector('.sidebar-btn:nth-child(8)').onclick = () => {
            logAction('Emergency stop activated');
        };

        
    </script>
